<odoo>
    <data>
      <record model="ir.ui.view" id="odoosv_caja_form">
        <field name="name">odoosv_caja_form</field>
        <field name="model">odoosv.caja</field>
        <field name="arch" type="xml">
            <form string="caja">
                <sheet>
                    <div class="oe_title oe_inline">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div> 
                    <group>
                        <field name="warehouse_id" />
                        <field name="location_id" />
                        <field name="picking_type_id" />
                        <field name="analytic_account_id" />
                        <field name="header" widget="html"/>
                        <field name="footer" widget="html"/>
                    </group>
                    <!--field name="serie_ids">
                      <tree editable="top">
                        <field name="name" />
                        <field name="serie" />
                        <field name="tipo_documento_id" />
                        <field name="sv_sequence_id" />
                      </tree>
  
                    </field-->
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
     </record>
    
    
    <!--tree del pei-->
     <record model="ir.ui.view" id="odoosv_caja_tree">
        <field name="name">odoosv_caja_tree</field>
        <field name="model">odoosv.caja</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" placeholder="Documento"/>
                <field name="warehouse_id" />
                <field name="location_id" />
                <field name="picking_type_id" />
                <field name="analytic_account_id" />
            </tree>
        </field>
     </record>
    
    
    <!--action del pei-->
        <record model="ir.actions.act_window" id="caja_action">
                <field name="name">Creación de cajas facturadoras</field>
                <field name="res_model">odoosv.caja</field>
