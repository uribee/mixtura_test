                    <p class="oe_view_nocontent_create">Listado de cajas facturadoras
                    </p>
                </field>
            </record>
    
    <!--menu del pei-->
       <menuitem id="odoosv_caja" parent="account.account_invoicing_menu" name="Cajas facturadoras" action="caja_action" sequence="4"/> 
    
       <record model="ir.actions.act_window" id="cierre_action">
