  <report
    id="corte_x_report"
    string="Corte X"
    model="odoosv.cierre"
    report_type="qweb-pdf"
    file="sv_caja.template_x_report"
    name="sv_caja.template_x_report"
    
    menu="True"/>
    
  
  
    <template id="template_x_report">
      <t t-call="web.html_container">
          <t t-foreach="docs" t-as="doc">
  
      <t t-call="web.basic_layout">
          <div class="page">
              <t t-raw="doc.caja_id.header"/>
              <!--<div class="oe_structure"/>-->
              <div class="row" style="border-bottom:thin solid #ffffff;margin-bottom:5px;">
                <div class="col-12" style="border-right:thin solid #ffffff;margin-bottom:5px;">
                  <h2>Corte X</h2>
                </div>
                <div class="col-12">
                  <table style="text-align:left;width:100%">
                    <tr>
